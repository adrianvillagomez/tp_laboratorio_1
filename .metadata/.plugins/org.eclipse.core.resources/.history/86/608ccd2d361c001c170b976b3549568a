#include <stdio.h>
#include <stdlib.h>
int utn_PedirNumeroEntero(float *pResultado,float*psegundo);
float sumaNumeros(int A,int B);

int main(void) {
	setbuf(stdout,NULL);
	float A;
	float B;
	int aux;
	int suma;
	aux=utn_PedirNumeroEntero(&B,&A);
	if (aux==1)
	{
		printf("salio todo bien\n");
	}
	printf("---el valor de A Y B es %.3f,%.3f---\n\n",B,A);
	suma=sumaNumeros(A, B);
	printf("El resultado de A + B es:%d",suma);

	//funcion para pedir un numero para dar valor a A Y B
	//funcion suma restar mult div factorial.
	//fflush(stdin);
	return EXIT_SUCCESS;
}

int utn_PedirNumeroEntero(float *pResultado,float*psegundo)
{
	int aux;
	aux=0;
	if(pResultado!=NULL&&psegundo!=NULL)
	{
	printf("Ingresar 1er operando\n");
	scanf("%f",pResultado);
	printf("ingresar 2do operando\n");
	scanf("%f",psegundo);
	aux=1;
	}
	return aux;
}
int sumaNumeros(int A,int B)
{
	int resultado;
	resultado=(float)A+B;
	return resultado;
}
